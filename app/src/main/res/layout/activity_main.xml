<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/periodicWorkInfoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello World" />

    <Button
        android:id="@+id/performWorkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perform_work"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/performPeriodicWorkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perform_periodic_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/performWorkBtn" />

    <Button
        android:id="@+id/cancelPeriodicWorkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Periodic Work"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/performPeriodicWorkBtn"
        app:layout_constraintStart_toStartOf="@+id/performPeriodicWorkBtn"
        app:layout_constraintTop_toBottomOf="@+id/performPeriodicWorkBtn"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/workInfoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Hello World" />

</androidx.constraintlayout.widget.ConstraintLayout>